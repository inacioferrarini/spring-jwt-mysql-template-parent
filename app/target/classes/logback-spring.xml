<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="homeLog" value="logs/app.log"/>
    <appender name="fileRolling" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${homeLog}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>logs/archived/app.%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <totalSizeCap>20GB</totalSizeCap>
            <maxHistory>60</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d %p %c{1.} [%t] %m%n</pattern>
        </encoder>
    </appender>
    <logger name="com.inacioferrarini.templates.api" level="debug" additivity="false">
        <appender-ref ref="fileRolling"/>
    </logger>
    <root level="error">
        <appender-ref ref="fileRolling"/>
    </root>
</configuration>